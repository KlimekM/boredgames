<div id="profile">
	<div id="profile-head">
		<p><img src="<%= @user.image_url %>"></p>
		<p><%= @user.first_name %> <%= @user.last_name %></p>
		<p><%= @user.username %></p>
		<% if current_user && current_user.id == @user.id %>
			<%= link_to "Edit", edit_user_path(@user) %>
		<% end %>
	</div>

	<div id="profile-friends">
		<% if !logged_in? %>
		<p>Wanna make friends? <%= link_to "Login", new_session_path %> or <%= link_to "Register", new_user_path %></p>
		<% else %>
			<% if current_user==@user %>
			<h2>Friends</h2>
			<ul>
				<% current_user.friends.each do |friend| %>
				<li><%= link_to "#{friend.username}", user_path(friend) %> <%= link_to "Remove Friend", friendship_path(id: current_user.id, friend: friend), method: :delete %></li>
				<% end %>
			</ul>
			<% elsif current_user.friends.include?(@user) %>
			<h2>Friends</h2>
			<ul>
				<% @user.friends.each do |friend| %>
				<li><%= link_to "#{friend.username}", user_path(friend) %></li>
				<% end %>
			</ul>
			<% else %>
			<h4><%= link_to "Add Friend", friendships_path(id: @user.id, current_user: current_user.id), method: :post %></h4>
			<% end  %>
		<% end %>
	</div>


	<div id="profile-games">
		<h2>Games</h2>
		<ul>
		<% @user.games.each do |game| %>
			<%= render partial: '/games/game', locals: { game: game } %>
		<% end %>
		</ul>
	</div>
</div>
