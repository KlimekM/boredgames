<!DOCTYPE html>
<html>
<head>
  <title>Boredgames</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <nav class="navbar-fixed-top">
    <h1>Bored Gamez</h1>
    <ul class="pagination navbar-right" id="no-top-margin">
      <li class="bigger-nav"> <%= link_to "Home", root_path %>
    <% if logged_in? %>
      <li class="bigger-nav"><%= link_to current_user.username, current_user %></li>
      <li class="bigger-nav"><%= link_to "Logout", '/logout' %></li>
    <% else %>
      <li class="bigger-nav"><%= link_to "Login", new_session_path %></li>
      <li class="bigger-nav"><%= link_to "Register", new_user_path %></li>
    <% end %>
    </ul>
    <p class="navbar-right">Placeholder SearchBar</p>
  </nav>
</header>

<%= yield %>

</body>
</html>
